upstream encore {
	server 127.0.0.1:8080;
	server 127.0.0.1:8081;
}

upstream encoredebug {
	server 127.0.0.1:8089;
}

server {
	listen 80;
	server_name encoreenco.re;

	access_log /var/log/nginx/encoreenco.re.access.log;
	error_log /var/log/nginx/encoreenco.re.error.log;

	location / {
		proxy_pass http://encore;
		proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header	Host		$host;
		proxy_set_header 	X-Real-IP	$remote_addr;
	}
}

server {
	listen 443 ssl;
	server_name encoreenco.re;

	ssl_certificate /srv/encore/config/etc/ssl/certs/encore_new.crt;
	ssl_certificate_key /srv/encore/config/etc/ssl/private/encore.key;

	access_log /var/log/nginx/encoreenco.re.443.access.log;
	error_log /var/log/nginx/encoreenco.re.443.error.log;

	location / {
		proxy_pass http://encore;
		proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header	Host		$host;
		proxy_set_header 	X-Real-IP	$remote_addr;
	}
}

server {
	listen 127.0.0.1:8088;
	server_name encoreenco.re;

	access_log /var/log/nginx/debug-encoreenco.re.access.log;
	error_log /var/log/nginx/debug-encoreenco.re.error.log;

	location / {
		proxy_pass http://encoredebug;
		proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header	Host		$host;
		proxy_set_header 	X-Real-IP	$remote_addr;
	}
}

